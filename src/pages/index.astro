---
import Layout from "@/layouts/Layout.astro";
import { URL_BASE } from "@/config";
---

<Layout title="Equilibrio hormonal en cada fase del ciclo">
  <main class=`h-screen bg-cover bg-center bg-no-repeat text-white font-brandon relative overflow-hidden` 
  style=`background-image: url(${URL_BASE}/img/bannerhero.webp);`>
    <div class="flex flex-col justify-between h-full">
      <header class="flex gap-4 justify-between w-7xl max-w-full mx-auto p-4 lg:p-8">
        <img
          class="h-10 md:h-12 w-auto"
          src={`${URL_BASE}/img/logos/abbott_black.webp`}
          alt="Logo abbott en negro"
        />
        <img
          class="h-10 md:h-12 w-auto"
          src={`${URL_BASE}/img/logos/bellanew.webp`}
          alt="Logo abbott en negro"
        />
      </header>
      <div class="max-w-7xl mx-auto p-4 lg:p-8">
        <h1 class="text-5xl lg:text-8xl font-bold text-white">
          EQUILIBRIO HORMONAL <span class="font-light block">EN CADA FASE DEL CICLO</span>
        </h1>
        <a href={`${URL_BASE}/app`} class="mt-8 inline-block bg-purple text-white font-bold py-4 px-8 rounded-full text-5xl">
          INICIAR
        </a>

      </div>
    </div>
  </main>
</Layout>
